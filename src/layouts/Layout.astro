---
import AboutMe from "../components/AboutMe.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Inicio from "../components/Inicio.astro";
import Contact from "../components/Contact.astro"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=AR+One+Sans:wght@400..700&family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>AlzusacaDev</title>
  </head>
  <body class="font-Geist">
    <div class="absolute top-0 z-[-2] h-100% w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
      <Header />
      <Inicio />
      <AboutMe/>
      <Contact />
      <Footer />
      <slot />
    </div>
    
  </body>
</html>

<style>
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
