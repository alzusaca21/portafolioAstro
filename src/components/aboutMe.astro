<script>
  // Manejo de las tabs
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    const activeIndicators = document.querySelectorAll('.active-indicator');
    
    // Inicializar - mostrar la primera tab
    tabContents[0].classList.remove('hidden');
    activeIndicators[0].classList.remove('hidden');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabName = button.getAttribute('data-tab');
        
        // Ocultar todos los contenidos y resetear botones
        tabContents.forEach(content => {
          content.classList.add('hidden');
        });
        
        tabButtons.forEach(btn => {
          btn.classList.remove('text-lightText');
          btn.classList.add('text-lightText/60');
          btn.querySelector('.active-indicator')?.classList.add('hidden');
        });
        
        // Mostrar el contenido seleccionado y activar botón
        document.querySelector(`.tab-content[data-content="${tabName}"]`).classList.remove('hidden');
        button.classList.remove('text-lightText/60');
        button.classList.add('text-lightText');
        button.querySelector('.active-indicator')?.classList.remove('hidden');
      });
    });
  });
</script>